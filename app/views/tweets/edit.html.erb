<!-- app/views/tweets/edit.html.erb -->

<h1>Edit Tweet</h1>

<div class="edit-tweet-form">
  <%= form_with(model: @tweet, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control", rows: 5 %>
    </div>
    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :video %>
      <%= form.text_field :video, class: "form-control" %>
    </div>
    <%= form.submit "Update Tweet", class: "btn btn-primary" %>
  <% end %>
</div>
